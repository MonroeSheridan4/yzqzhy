/* ==================== 移除了 Purple, Blue, Pink, Green 主题 ==================== */
/* 现在只保留 Light 和 Dark 两种标准主题，完美适配TDesign官方规范 */

/* ==================== 全局颜色变量（主题色） ==================== */
:root {
  --primary-color: #0052D9;  /* 主题色：TDesign 蓝 */
  --secondary-color: #366EF4;
  --accent-color: #FF6B6B;
  --success-color: #00A870;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --bg-white: #FFFFFF;
  --bg-gray: #F5F5F5;
  --border-color: #E5E5E5;
}

/* ==================== 渐变背景（紫色改为主题色） ==================== */
.gradient-blue {
  background: linear-gradient(135deg, #0052D9 0%, #366EF4 100%);
}

.gradient-pink {
  background: linear-gradient(135deg, #FF6B9D 0%, #C44569 100%);
}

.gradient-purple {
  background: linear-gradient(135deg, #0052D9 0%, #366EF4 100%);  /* 紫色改为主题色 */
}

.gradient-orange {
  background: linear-gradient(135deg, #FFA500 0%, #FF6347 100%);
}

/* ==================== 动画效果 ==================== */

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 上滑动画 */
.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 骨架屏加载动画 */
.skeleton {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 旋转动画 */
@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 缩放动画 */
@keyframes scale {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

/* ==================== 安全区域适配 ==================== */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
