/**app.wxss**/
page {
  background-color: #F5F5F5;
  font-family: -apple-system-font, "Helvetica Neue", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

/* ==================== TDesign 全局消息通知位置优化 ==================== */
/* 调整 t-message 和 t-toast 的显示位置，避免被状态栏遮挡 */
t-message {
  position: fixed !important;
  top: 100rpx !important;
  left: 0 !important;
  right: 0 !important;
  z-index: 99999 !important;
}

t-toast {
  z-index: 99999 !important;
}

/* ==================== TDesign 主题变量 - Light 简约白 ==================== */
page {
  /* 品牌色 - TDesign标准蓝 */
  --td-brand-color: #0052D9;
  --td-brand-color-hover: #003BA3;
  --td-brand-color-focus: #0052D9;
  --td-brand-color-active: #002870;
  --td-brand-color-disabled: rgba(0, 82, 217, 0.4);
  --td-brand-color-light: rgba(0, 82, 217, 0.2);
  
  /* 功能色 */
  --td-success-color: #00A870;
  --td-warning-color: #ED7B2F;
  --td-error-color: #E34D59;
  --td-info-color: #7289DA;
  
  /* 背景色 */
  --td-bg-color-page: #FFFFFF;
  --td-bg-color-container: #F3F3F3;
  --td-bg-color-container-hover: #E8E8E8;
  --td-bg-color-container-active: #DCDCDC;
  --td-bg-color-secondarycontainer: #F8F8F8;
  --td-bg-color-component: #FFFFFF;
  --td-bg-color-component-hover: #F3F3F3;
  --td-bg-color-component-active: #E8E8E8;
  --td-bg-color-component-disabled: rgba(243, 243, 243, 0.5);
  
  /* 文字颜色 */
  --td-text-color-primary: #000000;
  --td-text-color-secondary: #666666;
  --td-text-color-placeholder: rgba(102, 102, 102, 0.6);
  --td-text-color-disabled: rgba(102, 102, 102, 0.4);
  --td-text-color-anti: #FFFFFF;
  --td-text-color-brand: #0052D9;
  --td-text-color-link: #0052D9;
  
  /* 字体颜色（灰度） */
  --td-font-gray-1: #000000;
  --td-font-gray-2: #333333;
  --td-font-gray-3: #666666;
  --td-font-gray-4: #999999;
  --td-font-white-1: #FFFFFF;
  --td-font-white-2: rgba(255, 255, 255, 0.55);
  --td-font-white-3: rgba(255, 255, 255, 0.35);
  --td-font-white-4: rgba(255, 255, 255, 0.22);
  
  /* 边框颜色 */
  --td-border-level-1-color: #DCDCDC;
  --td-border-level-2-color: #F3F3F3;
  --td-component-border: #DCDCDC;
  --td-component-stroke: #DCDCDC;
  
  /* 阴影 */
  --td-shadow-1: 0 1px 10px rgba(0, 0, 0, .05), 0 4px 5px rgba(0, 0, 0, .08);
  --td-shadow-2: 0 3px 14px 2px rgba(0, 0, 0, .05), 0 8px 10px 1px rgba(0, 0, 0, .06);
  --td-shadow-3: 0 6px 30px 5px rgba(0, 0, 0, .05), 0 16px 24px 2px rgba(0, 0, 0, .08);
  
  /* 蒙层 */
  --td-mask-active: rgba(0, 0, 0, .6);
  --td-mask-disabled: rgba(0, 0, 0, .4);
  
  /* 状态栏高度（用于消息通知定位） */
  --status-bar-height: 44px;
}

